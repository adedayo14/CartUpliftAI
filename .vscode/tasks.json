{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Deploy Shopify app",
			"type": "shell",
			"command": "shopify app deploy",
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Build theme extension assets",
			"type": "shell",
			"command": "npm run build",
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		},
		{
			"label": "Dev (Shopify CLI)",
			"type": "shell",
			"command": "npm run dev",
			"args": [],
			"isBackground": true,
			"problemMatcher": [
				"$tsc",
				"$eslint-stylish"
			],
			"group": "build"
		}
	]
}